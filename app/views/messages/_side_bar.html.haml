.SideBar
  .LeftHeader
    .LeftHeader__UserList
      .LeftHeader__UserList__UserName
        = current_user.name
      %ul.LeftHeader__UserList__IconList
        %li.LeftHeader__UserList__Icon
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit')
        %li.LeftHeader__UserList__Icon
          = link_to edit_user_path(current_user) do
            = icon('fab', 'whmcs')
  
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group), class:"Group__Link" do
          .Group__Link__Name
            = group.name
